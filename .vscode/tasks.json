{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test: Run All Tests",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command",
                "Invoke-Pester -Path ./Tests/ -Output Detailed"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run all Pester tests for the Glooko module"
        },
        {
            "label": "Test: Run Tests with Coverage",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-File",
                "./Tests/PesterConfig.ps1"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run Pester tests with code coverage analysis"
        },
        {
            "label": "Analyze: PSScriptAnalyzer",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command",
                "Get-ChildItem -Path . -Filter '*.ps1' -Recurse | Invoke-ScriptAnalyzer -Settings .vscode/PSScriptAnalyzerSettings.psd1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "PSScriptAnalyzer",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(\\w+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "detail": "Run PSScriptAnalyzer on all PowerShell files"
        },
        {
            "label": "Build: Import Module",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command",
                "Import-Module ./Glooko.psd1 -Force; Get-Command -Module Glooko"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Import the Glooko module and show available commands"
        },
        {
            "label": "Build: Full Build and Test",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command",
                "Write-Host 'Building Glooko module...' -ForegroundColor Green; Import-Module ./Glooko.psd1 -Force; Write-Host 'Running code analysis...' -ForegroundColor Yellow; Get-ChildItem -Path . -Filter '*.ps1' -Recurse | Invoke-ScriptAnalyzer -Settings .vscode/PSScriptAnalyzerSettings.psd1; Write-Host 'Running tests...' -ForegroundColor Yellow; Invoke-Pester -Path ./Tests/ -Output Detailed; Write-Host 'Build complete!' -ForegroundColor Green"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Complete build process: import module, analyze code, and run tests"
        },
        {
            "label": "Development: Watch Tests",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command",
                "while ($true) { Clear-Host; Write-Host 'Running tests... (Ctrl+C to stop)' -ForegroundColor Cyan; Invoke-Pester -Path ./Tests/ -Output Normal; Start-Sleep -Seconds 5 }"
            ],
            "group": "test",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Continuously run tests every 5 seconds (useful during development)"
        }
    ]
}